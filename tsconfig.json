{
    "compilerOptions": {
        "outDir": "./dist",
        "module": "commonjs",
        "target": "es6",
        "removeComments": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "strict": true,
        "resolveJsonModule": true,
        "baseUrl": ".",
        "paths": {
          "src/*": ["src/*"]
        },
        "lib": ["esnext"]
    },
    "include": ["./src"],
    "exclude": ["node_modules"]
}
