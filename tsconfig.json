{
  "compilerOptions": {
    "outDir": "dist",
    "lib": ["ES2019"],
    "removeComments": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "allowJs": true,
    "noImplicitUseStrict": true,
    "target": "ES2015",
    "module": "CommonJS"
  },
  "include": ["src/index.ts"],
  "exclude": ["node_modules", "dist"]
}
