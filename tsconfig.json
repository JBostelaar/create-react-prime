{
    "compilerOptions": {
        "outDir": "./dist",
        "module": "commonjs",
        "target": "es6",
        "removeComments": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "strict": true,
        "resolveJsonModule": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "baseUrl": "src",
        "paths": {
            "ioc": ["ioc/container"],
            "ioc/*": ["ioc/*"],
            "installers/*": ["installers/*"],
            "types": ["types/index"],
            "types/*": ["types/*"]
        },
        "lib": ["esnext"]
    },
    "include": ["./src"],
    "exclude": ["node_modules"]
}
